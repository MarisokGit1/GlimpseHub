@model GlimpseHub.Data.Models.Gallery

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="d-flex flex-wrap m-4 border-8 justify-content-center">
        <div class="card mb-4" style="width: 18rem;">
            <img src="@Html.DisplayFor(model => model.MainPicture)" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
                <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Html.DisplayFor(model => model.Author.UserName)</li>
                <li class="list-group-item">@Html.DisplayFor(model => model.Category.Name)</li>
                <li class="list-group-item">@Html.DisplayFor(model => model.CreatedOn)</li>
            </ul>
            <div class="card-body d-flex justify-content-between">
                <a asp-controller="Galleries" asp-action="Details" asp-route-id="@Html.DisplayFor(model => model.Id)" class="card-link">Look at pictures</a>
            </div>
        </div>



    </div>
  
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
